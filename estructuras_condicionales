def salir():
    print("Pue' bye")
    sys.exit()

while True:
    
    print("1. Reglas del juego \n")
    print("2. Iniciar juego \n")
    print("3. Salir \n")

    opcion = input("Selecciona una opción: ")

    if opcion == "1":
        reglas()  
        
    elif opcion == "2":
        iniciar_juego()

    elif opcion == "3":
        salir()

    else: 
        print("La opción seleccionada no existe. Fíjate bien! \n")


